<h1 class="fw-lighter text-center">Sign up</h1>

<div class="col-md-6 col-md-offset-3 mx-auto">
    <%= form_with model: @user  do |f| %>
    
      <%= f.label :name, class: "col-sm-3 control-label" %>
      <%= f.text_field :name, class: "form-control mb-4", placeholder:"User name" %>
 
      <%= f.label :email, class: "col-sm-3 control-label" %>
      <%= f.email_field :email, class: "form-control mb-4", placeholder:"name@example.co.jp"%>
   
      <%= f.label :password, class: "col-sm-3 control-label" %>
      <%= f.password_field :password,  class: "form-control mb-4", placeholder:"password"%>

      <%= f.label :password_confirmation, "Confirmation", class: "col-sm-3 control-label"%>
      <%= f.password_field :password_confirmation, class: "form-control mb-4", placeholder:"password confirmation"%>

      <%= f.submit "新規登録", class: "btn btn-primary d-grid gap-2 col-6 mx-auto"%>
    <% end %>

    <%= link_to "トップページに戻る", '/static_pages/home', class: "btn btn-success d-grid gap-2 col-6 mx-auto mt-4"%>
</div>